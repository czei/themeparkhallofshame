# Theme Park Downtime Tracker - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Environment (local | production)
ENVIRONMENT=local

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=themepark_tracker_dev
DB_USER=themepark_user
DB_PASSWORD=your_secure_password_here

# Queue-Times.com API
QUEUE_TIMES_API_BASE_URL=https://queue-times.com
QUEUE_TIMES_API_KEY=  # Optional: If Queue-Times provides API keys in the future

# Flask Configuration
FLASK_APP=src/api/app.py
FLASK_ENV=development  # development | production
FLASK_DEBUG=1  # 1 for development, 0 for production
SECRET_KEY=your_secret_key_here_change_in_production

# Logging
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL

# SQLAlchemy/ORM Configuration
SQL_ECHO=false  # Set to 'true' to log all SQL queries to console (development only)

# Slow Query Logging (Feature 003-orm-refactoring)
# Log queries that exceed threshold (milliseconds)
SLOW_QUERY_THRESHOLD_MS=1000  # Log queries taking >1 second
SLOW_QUERY_LOG_FILE=/var/log/themeparkhallofshame/slow_queries.log  # Production path
# For MySQL server-side slow query log, configure in my.cnf:
#   slow_query_log = 1
#   slow_query_log_file = /var/log/mysql/slow-query.log
#   long_query_time = 1

# AWS Configuration (Production only - leave empty for local development)
AWS_REGION=us-east-1
AWS_SSM_PREFIX=/themeparkhall  # SSM Parameter Store path prefix

# Data Collection Settings
COLLECTION_INTERVAL_MINUTES=10
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_MULTIPLIER=2

# Geographic Filter (Testing Phase)
# US-only for testing phase, set to empty string '' for all countries in production
FILTER_COUNTRY=US

# API Configuration
API_RATE_LIMIT_PER_HOUR=100
API_RATE_LIMIT_PER_DAY=1000

# Historical Import Configuration (Feature 004)
# S3 bucket containing archived themeparks.wiki data
ARCHIVE_S3_BUCKET=archive.themeparks.wiki
ARCHIVE_S3_REGION=us-east-1
# Number of records to process before committing
IMPORT_BATCH_SIZE=10000
# Number of batches between checkpoint saves
IMPORT_CHECKPOINT_INTERVAL=10
