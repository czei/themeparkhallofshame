# Theme Park Hall of Shame - Production Environment Configuration
# Copy this file to /opt/themeparkhallofshame/backend/.env and fill in values
# NEVER commit the actual .env file to git!

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=themepark_tracker
DB_USER=themepark_app
# Generate a secure password and enter it here:
DB_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
FLASK_ENV=production
FLASK_DEBUG=0
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY

# =============================================================================
# QUEUE-TIMES API
# =============================================================================
QUEUE_TIMES_API_BASE_URL=https://queue-times.com

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# RATE LIMITING
# =============================================================================
API_RATE_LIMIT_PER_HOUR=1000
API_RATE_LIMIT_PER_DAY=10000

# =============================================================================
# DATA COLLECTION SETTINGS
# =============================================================================
# Filter to US parks only (leave empty for all countries)
FILTER_COUNTRY=US
# Collection interval in minutes (for reference - actual interval set in cron)
COLLECTION_INTERVAL_MINUTES=10
# Maximum retry attempts for API calls
MAX_RETRY_ATTEMPTS=3
